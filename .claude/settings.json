{
  "version": "1.0",
  "project": {
    "name": "Prompter",
    "description": "Modular Prompt Composition System",
    "type": "prompt_engineering"
  },
  "composition": {
    "components_path": "components/",
    "compositions_path": "compositions/",
    "output_path": ".claude/commands/",
    "validation_enabled": true
  },
  "meta_agents": {
    "composer": ".claude/commands/composer.md",
    "extractor": ".claude/commands/extractor.md", 
    "validator": ".claude/commands/validator.md",
    "initializer": ".claude/commands/initializer.md"
  },
  "quality_standards": {
    "component_validation": true,
    "assembly_validation": true,
    "duplication_threshold": 0.20,
    "completeness_threshold": 0.95
  },
  "examples": {
    "dreamwork_case_study": "examples/dreamwork_extraction.yaml"
  }
}